<h1>POSTPOSTPOST</h1>

<tr>
  <th>Title</th>
  <th>Text</th>
  <th colspan="3"></th>
</tr>
  <tr>
    <td><%= @post.title %><br></td>
    <td><%= @post.body %><br></td>
    <td><%= image_tag @post.image.url(:medium) %><br></td>
    <td><%= link_to 'Back', posts_path %></td>
    <td><%= link_to 'Edit', edit_post_path(@post) %></td>
    <td><%= link_to 'Destroy', post_path(@post),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
  </tr>


<%= form_for [@post, @post.comments.new] do |f| %>

    <%= f.label :body %>
    <%= f.text_area :body %>

    <%= f.submit %>
<% end %>

<% @post.comments.each do |comment| %>
  <%= comment.body %><br>
  <% end %>
